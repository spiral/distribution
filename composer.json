{
    "name": "spiral/distribution",
    "type": "library",
    "description": "PHP distribution package",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/distribution"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov (SerafimArts)",
            "email": "kirill.nesmeyanov@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-factory": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\Distribution\\": "src"
        }
    },
    "require-dev": {
        "spiral/boot": "^3.8",
        "aws/aws-sdk-php": "^3.0",
        "guzzlehttp/psr7": "^1.7",
        "jetbrains/phpstorm-attributes": "^1.0",
        "phpunit/phpunit": "^10.1",
        "vimeo/psalm": "^5.9"
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\Distribution\\": "tests"
        }
    },
    "suggest": {
        "aws/aws-sdk-php": "(^3.0) For use S3 and CloudFront URI Resolvers"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.8.x-dev"
        }
    },
    "scripts": {
        "analyze": [
            "psalm --no-cache"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
